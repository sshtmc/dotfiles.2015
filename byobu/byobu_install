
BASE=$(dirname "$0")
BASE=$(cd "$BASE/.."; pwd)

T=$(mktemp -d)
cd $T

wget https://launchpad.net/byobu/trunk/5.43/+download/byobu_5.43.orig.tar.gz
tar xf byobu_5.43.orig.tar.gz

cd byobu-5.43
./configure --prefix=$HOME/progs/byobu
make
make install

rm -r $T

ln -sf $BASE/byobu/byoburc $HOME/.byoburc
ln -sf $BASE/byobu/byobu $HOME/.byobu

